{
  "name": "vehiverze-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo run start --filter=@vehiverze/website --filter=@vehiverze/admin-panel",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix"
  },

  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "eslint": "^9.39.2",
    "@next/eslint-plugin-next": "16.0.10",
    "eslint-config-next": "^16.0.10",
    "next": "^16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "turbo": "^2.6.1",
    "ultracite": "6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
