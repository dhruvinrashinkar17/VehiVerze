generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(cuid())
  name             String?
  email            String?              @unique
  phone            String               @unique
  emailVerified    DateTime?
  phoneVerified    DateTime?
  image            String?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  vehicles         Vehicle[]
  insurances       Insurance[]
  garageBookings   GarageBooking[]
  healthInsurances HealthInsurance[]
}

model Vehicle {
  id              String    @id @default(cuid())
  type            String    // 2,3,4,6,8 wheeler
  brand           String
  model           String
  variant         String
  year            Int
  fuelType        String
  kilometers      String
  city            String
  condition       Json
  images          String[]
  documents       Json?
  estimatedPrice  Decimal?
  finalPrice      Decimal?
  status          String    @default("pending")
  listingType     String    // buy or sell
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  inspection      Inspection?
}

model Inspection {
  id          String    @id @default(cuid())
  vehicleId   String    @unique
  vehicle     Vehicle   @relation(fields: [vehicleId], references: [id])
  address     String
  date        DateTime
  timeSlot    String
  status      String    @default("scheduled")
  report      Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Insurance {
  id              String    @id @default(cuid())
  type            String    // comprehensive, third-party, zero-dep
  vehicleDetails  Json
  premium         Decimal
  coverage        Decimal
  startDate       DateTime
  endDate         DateTime
  documents       Json?
  status          String    @default("active")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id])
}

model HealthInsurance {
  id              String    @id @default(cuid())
  type            String    // individual, family, senior
  members         Json[]    // array of covered family members
  premium         Decimal
  coverage        Decimal
  startDate       DateTime
  endDate         DateTime
  documents       Json?
  status          String    @default("active")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id])
}

model GarageBooking {
  id              String    @id @default(cuid())
  vehicleDetails  Json
  serviceType     String
  description     String?
  address         String?
  date            DateTime
  timeSlot        String
  estimatedCost   Decimal?
  finalCost       Decimal?
  status          String    @default("scheduled")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id])
}

// New Garage Service Models
model GarageServiceBooking {
  id                      String         @id @default(cuid())
  bookingId               String         @unique
  vehicleType             String
  brand                   String
  model                   String
  year                    Int
  variant                 String?
  transmission            String?
  registrationNumber      String
  selectedServices        String[]       // Array of service IDs
  bookingDate             DateTime
  timeSlot                String
  pickupDrop              Boolean        @default(false)
  additionalNotes         String?
  customerName            String
  mobile                  String
  email                   String?
  address                 String
  paymentMethod           String
  paymentStatus           String         @default("pending")
  totalAmount             Decimal
  finalAmount             Decimal?
  status                  String         @default("confirmed") // confirmed, in_progress, completed, cancelled
  garagePartnerId         String
  garagePartner           GaragePartner  @relation(fields: [garagePartnerId], references: [id])
  estimatedCompletionTime DateTime?
  actualCompletionTime    DateTime?
  serviceNotes            String?
  paidAt                  DateTime?
  cancelledAt             DateTime?
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
  payments                Payment[]
  notifications           Notification[]

  @@map("garage_service_booking")
}

model GaragePartner {
  id             String                 @id @default(cuid())
  name           String
  address        String
  city           String
  state          String
  pincode        String
  phone          String
  email          String?
  ownerName      String
  gstNumber      String?
  specialization String[]               // Array of specializations
  vehicleTypes   String[]               // Array of vehicle types they service
  services       String[]               // Array of service IDs they offer
  workingHours   Json                   // Working hours data
  rating         Float                  @default(4.0)
  totalReviews   Int                    @default(0)
  isActive       Boolean                @default(true)
  isVerified     Boolean                @default(false)
  joinedAt       DateTime               @default(now())
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  bookings       GarageServiceBooking[]

  @@map("garage_partner")
}

model Payment {
  id              String               @id @default(cuid())
  bookingId       String
  booking         GarageServiceBooking @relation(fields: [bookingId], references: [id])
  amount          Decimal
  paymentMethod   String               // upi, card, wallet, cash
  paymentGateway  String?              // razorpay, payu, etc.
  transactionId   String?
  status          String               @default("pending") // pending, completed, failed, refunded
  gatewayResponse Json?
  refundAmount    Decimal?
  refundedAt      DateTime?
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt

  @@map("payment")
}

model Notification {
  id            String               @id @default(cuid())
  type          String               // booking_confirmed, status_update, reminder, etc.
  title         String
  message       String
  recipientType String               // customer, partner, admin
  recipientId   String
  bookingId     String?
  booking       GarageServiceBooking? @relation(fields: [bookingId], references: [id])
  isRead        Boolean              @default(false)
  scheduledFor  DateTime?
  sentAt        DateTime?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  @@map("notification")
}

model OTP {
  id        String   @id @default(cuid())
  phone     String
  code      String
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}
